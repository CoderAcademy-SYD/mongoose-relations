<h1>Create Author</h1>

<form method="post" action="/authors">
    <div>
        <label>Name</label>
    </div>
    <div>
        <input type="text" name="name" />
    </div>
    <div>
        <label>Gender</label>
    </div>
    <div>
        <select name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="non binary" default>Non Binary</option>
        </select>
    </div>
    <div>
        <input type="submit" value="submit" />
    </div>
</form>